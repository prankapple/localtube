<!DOCTYPE html>
<html>
<head>
  <title>LocalTube</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/header') %>
  <div class="container">
    <div class="row">
      <% videos.forEach(video => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <video class="card-img-top" height="200" controls>
              <source src="/video/<%= video.filename %>" type="video/mp4">
            </video>
            <div class="card-body">
              <h5 class="card-title"><a href="/watch/<%= video.id %>"><%= video.title %></a></h5>
              <p class="card-text">By <%= video.username %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
